<h1>User page/Project一覧</h1>

<% if logged_in? %>
  <!--一覧表示-->
  プロジェクト名
  キャプション
  <% @current_user.projects.each do |project| %>
    <div>
      <%= project.name %>
      <%= project.caption %>
    </div>
  <% end %>
  <br>
  <!--作成フォーム-->
  <%= form_for(@project, :url => {:controller => :projects, :action => :create }) do |f| %>
    <div>
      <%= f.label :プロジェクト名を入力%><br>
      <%= f.text_field :name, autofocus: true %><br>
      <%= f.label :キャプションを入力%><br>
      <%= f.text_area :caption, autofocus: true %>
    </div>
    <!-- メンバーの追加はここでやる？ -->
    <%= f.submit %>
  <% end %>
<% end %>
