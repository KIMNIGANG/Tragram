<html>
  <head>
    <title>Places Search Box</title>
    <script src="https://polyfill.io/v3/polyfill.min.js?features=default"></script>

    <%= stylesheet_link_tag "map_style.css" %>
  </head>
  <body>
    <input
      id="pac-input"
      class="controls"
      type="text"
      placeholder="Search Box"
    />
    <div id="map"></div>

      <button type=button id="place-btn">place list</button>  
      <ol id="place-list">

      </ol>

      <button type=button id="set-pin">set pin</button>  
      <button type=button id="clear-pin">clear pin</button>  

    <%= javascript_pack_tag 'map', 'data-turbolinks-track': 'reload'%>
    <script
      src="https://maps.googleapis.com/maps/api/js?key=AIzaSyBPeJRg78YsYu3-A_PkaV0ovciRzZfRwv0&callback=initAutocomplete&libraries=places&v=weekly"
      defer
    ></script>
  </body>
</html>
