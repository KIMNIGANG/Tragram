<!-- post編集フォーム -->
  <%= form_for(@post, :url => {:controller => :posts, :action => :update }) do |f| %>
    <%= f.label :タイトル, html: { class: "post_edit_label" } %>
    <%= f.text_field :name, html: { class: "post_name_edit" } %>

    <%= f.label :説明 %>
    <%= f.text_area :caption, html: { class: "post_caption_edit" } %>

    <%= f.submit %>
  <% end %>