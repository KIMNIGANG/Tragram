<!-- post編集フォーム -->
  <%= form_for(@post, :url => {:controller => :posts, :action => :update }, html: { class: "post_edit_form" }) do |f| %>
    <b><%= f.label :タイトル, html: { class: "post_edit_label" } %></b>
    <%= f.text_field :name, html: { class: "post_name_edit" } %>

    <b><%= f.label :説明 %></b>
    <%= f.text_area :caption, html: { class: "post_caption_edit" } %>
    <br>
    <%= f.submit "投稿を更新する" , class: "btn" %>
  <% end %>